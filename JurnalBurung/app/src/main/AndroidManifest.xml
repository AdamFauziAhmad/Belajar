<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.jurnalburung">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.jurnalburung.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.example.android.jurnalburung.Splashscreen"
            android:theme="@style/AppTheme.splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.jurnalburung.OrderActivity"
            android:label="Aktivitas Order"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="com.example.android.jurnalburung.MainActivity">
            <meta-data
                android:name="android.support.MainActivity"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>